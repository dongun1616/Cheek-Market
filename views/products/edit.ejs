<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Product</h1>
        <div class="col-6 offset-3">
            <form action="/products/<%= product._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="product[title]"
                        value="<%= product.title %>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="product[location]"
                        value="<%= product.location %>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="product[image]"
                        value="<%= product.image %>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="price">Product Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚©</span>
                        <input type="text" class="form-control" id="price" placeholder="0" aria-label="price"
                            aria-describedby="price-label" name="product[price]" value="<%= product.price %>">
                    </div>
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="product[description]"><%= product.description %></textarea>
                </div>
                <div class=" mb-3"><button class="btn btn-info">Update Product</button></div>
            </form>
            <a href="/products/<%= product._id %>">Back to Products</a>
        </div>
    </div>